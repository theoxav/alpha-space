{
  "commitMessage": {
    "style": "conventional",
    "rules": {
      "format": "type(scope): short description in English",
      "descriptionCase": "imperative",
      "maxDescriptionLength": 72,
      "bodyWrapLength": 100,
      "requireScope": true,
      "bodyRequiredFor": [
        "feat",
        "fix"
      ],
      "footerRequiredFor": [
        "breaking-change"
      ]
    },
    "instructions": "Always write commit messages in English, never in French. Use the imperative mood (e.g., 'add', 'fix', 'update', 'remove'). The subject must be short and concise. Provide a meaningful body when required. Follow the Conventional Commits standard strictly.",
    "examples": [
      "feat(ui): add dark mode toggle to settings page",
      "fix(api): handle null user profile response gracefully",
      "chore(ci): update GitHub Actions workflow for testing",
      "docs(readme): improve setup instructions for local dev",
      "refactor(core): simplify error handling logic",
      "test(auth): add unit tests for JWT validation"
    ]
  }
}
